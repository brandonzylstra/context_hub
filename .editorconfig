root = true

### Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true


##### Programming language files #########################################

#### Ruby
[*.{rb,rake,gemspec,ru}]
indent_style = space
indent_size = 2

[{Rakefile,Capfile,Guardfile,Procfile,config.ru,Gemfile}]
indent_style = space
indent_size = 2

[Gemfile.lock]
indent_style = space
indent_size = 2

[*.erb]
indent_style = space
indent_size = 2


### JavaScript and TypeScript
# Common convention: 2 spaces
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2

### JSON (including variants)
[*.{json,jsonc,jsonl}]
indent_style = space
indent_size = 2


##### Markup, Markdown, & CSS ##################################################

### CSS and derivatives
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

### HTML
[*.{html,htm}]
indent_style = space
indent_size = 2

### Markdown
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
# whitespace is meaningful in Markdown

### XML files
[*.{xml,xsl,xslt,svg}]
indent_style = space
indent_size = 2


##### Configuration files ######################################################

[.editorconfig]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space
indent_size = 2

### JSON-based config files
[.prettierrc,.babelrc]
indent_style = space
indent_size = 2

### YAML
[*.{yaml,yml}]
indent_style = space
indent_size = 2
# Spec forbids tabs: https://yaml.org/faq.html

### Command-line flag configuration files
[{.rspec,.railsrc}]
indent_style = space
indent_size = 2

### Git configuration files
[{.gitignore,.gitattributes}]
indent_style = space
indent_size = 2

### Environment files
[*.{env,env.*}]
indent_style = space
indent_size = 2


##### Other files ##############################################################

### Docker files
[{Dockerfile,Dockerfile.*,*.dockerfile}]
indent_style = space
indent_size = 2

### Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

### SQL files
[*.sql]
indent_style = space
indent_size = 2

### Yarn files
[yarn.lock]
indent_style = space
indent_size = 2

### Makefiles
# tabs are required for recipe lines
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

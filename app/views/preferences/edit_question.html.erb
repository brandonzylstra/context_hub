<div>
  <!-- Breadcrumb navigation -->
  <nav class="flex border-b border-gray-200 bg-white mb-6" aria-label="Breadcrumb">
    <ol role="list" class="flex w-full max-w-screen-xl space-x-4 px-4 sm:px-6 lg:px-8 py-3">
      <li class="flex">
        <div class="flex items-center">
          <a href="/" class="text-gray-400 hover:text-gray-500">
            <svg class="size-5 shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M9.293 2.293a1 1 0 0 1 1.414 0l7 7A1 1 0 0 1 17 11h-1v6a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3a1 1 0 0 0-1-1H9a1 1 0 0 0-1 1v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-6H3a1 1 0 0 1-.707-1.707l7-7Z" clip-rule="evenodd" />
            </svg>
            <span class="sr-only">Home</span>
          </a>
        </div>
      </li>
      <li class="flex">
        <div class="flex items-center">
          <svg class="h-full w-6 shrink-0 text-gray-200" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" aria-hidden="true">
            <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z" />
          </svg>
          <a href="/preferences" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">Preferences</a>
        </div>
      </li>
      <li class="flex">
        <div class="flex items-center">
          <svg class="h-full w-6 shrink-0 text-gray-200" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" aria-hidden="true">
            <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z" />
          </svg>
          <a href="/preferences/<%= @category.name %>" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700"><%= @category.name %></a>
        </div>
      </li>
      <li class="flex">
        <div class="flex items-center">
          <svg class="h-full w-6 shrink-0 text-gray-200" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" aria-hidden="true">
            <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z" />
          </svg>
          <a href="/preferences/<%= @category.name %>/edit" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">Edit</a>
        </div>
      </li>
      <li class="flex">
        <div class="flex items-center">
          <svg class="h-full w-6 shrink-0 text-gray-200" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" aria-hidden="true">
            <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z" />
          </svg>
          <a href="#" class="ml-4 text-sm font-medium text-indigo-600 hover:text-indigo-800" aria-current="page">Edit Question</a>
        </div>
      </li>
    </ol>
  </nav>

  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h1 class="text-2xl font-bold text-gray-900 sm:text-3xl">Edit Question</h1>
      <p class="mt-2 text-sm text-gray-600 md:text-base">Update details for question in <%= @category.name %> category</p>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to edit_preference_path(@category.name), class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
        <svg class="mr-1.5 -ml-0.5 size-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to Questions
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow-sm rounded-lg overflow-hidden">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with model: @question, url: update_question_preference_path(@category.name, @question), method: :patch, local: true, data: { turbo: false } do |f| %>
        <div class="space-y-6">
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= f.label :label, "Question Label", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :label, required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", 
                              aria_describedby: "label-description" %>
              </div>
              <p class="mt-2 text-sm text-gray-500" id="label-description">The text shown to users</p>
            </div>

            <div class="sm:col-span-3">
              <%= f.label :key, "Question Key", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :key, required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", 
                              aria_describedby: "key-description" %>
              </div>
              <p class="mt-2 text-sm text-gray-500" id="key-description">Unique identifier for this question</p>
            </div>

            <div class="sm:col-span-3">
              <%= f.label :question_type, "Question Type", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.select :question_type, PreferenceQuestion::QUESTION_TYPES.map { |t| [t.titleize, t] }, {}, required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                          aria_describedby: "type-description" %>
              </div>
              <p class="mt-2 text-sm text-gray-500" id="type-description">The type of input for this question</p>
            </div>

            <div class="sm:col-span-3">
              <%= f.label :required, class: "block text-sm font-medium text-gray-700" do %>
                <div class="flex items-center">
                  <%= f.check_box :required, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
                  <span class="ml-2">Required?</span>
                </div>
              <% end %>
              <p class="mt-2 text-sm text-gray-500">Whether this question must be answered</p>
            </div>

            <div class="sm:col-span-6">
              <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_area :description, rows: 3, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
              <p class="mt-2 text-sm text-gray-500">Helpful explanation for this question</p>
            </div>

            <div class="sm:col-span-6" id="options-group">
              <%= f.label :options, "Options (comma separated)", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <% 
                  # Parse options correctly, depending on format
                  options_value = if @question.options.is_a?(String) && @question.options.start_with?('[')
                    JSON.parse(@question.options).join(', ') rescue @question.options
                  elsif @question.options_array.present?
                    @question.options_array.join(', ')
                  else
                    ''
                  end
                %>
                <%= f.text_field :options, value: options_value, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                               aria_describedby: "options-description" %>
              </div>
              <p class="mt-2 text-sm text-gray-500" id="options-description">Required for select, radio, or checkbox types</p>
            </div>

            <div class="sm:col-span-6">
              <%= f.label :default_value, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <% if @question.question_type == "textarea" %>
                  <%= f.text_area :default_value, rows: 3, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                <% elsif @question.question_type == "checkbox" && @question.default_value.present? %>
                  <% 
                    # Handle checkbox default values specifically
                    default_value_parsed = if @question.default_value.is_a?(String) && @question.default_value.start_with?('[')
                      JSON.parse(@question.default_value).join(', ') rescue @question.default_value
                    else
                      @question.default_value
                    end
                  %>
                  <%= f.text_field :default_value, value: default_value_parsed, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                <% else %>
                  <%= f.text_field :default_value, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                <% end %>
              </div>
              <p class="mt-2 text-sm text-gray-500">Default value if no preference is set</p>
            </div>
          </div>
        </div>

        <div class="mt-6 flex flex-col-reverse sm:flex-row items-center justify-end gap-3">
          <%= button_to delete_question_preference_path(@category.name, @question), method: :delete, 
                      data: { turbo_confirm: "Are you sure you want to delete this question? This action cannot be undone." }, 
                      class: "w-full sm:w-auto order-2 sm:order-1 px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
            Delete Question
          <% end %>
          
          <%= f.submit "Update Question", class: "w-full sm:w-auto order-1 sm:order-2 inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:ml-3 sm:text-sm" %>
        </div>
      <% end %>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const typeSelect = document.querySelector('select[name="preference_question[question_type]"]');
      const optionsGroup = document.getElementById('options-group');
      
      // Update options field visibility based on question type
      function updateOptionsVisibility() {
        if (['select', 'radio', 'checkbox'].includes(typeSelect.value)) {
          optionsGroup.classList.remove('opacity-50');
          optionsGroup.querySelector('input').setAttribute('required', 'required');
        } else {
          optionsGroup.classList.add('opacity-50');
          optionsGroup.querySelector('input').removeAttribute('required');
        }
      }
      
      // Initial setup
      updateOptionsVisibility();
      
      // Update when type changes
      typeSelect.addEventListener('change', updateOptionsVisibility);
    });
  </script>
</div>